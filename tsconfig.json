{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "tdesign-vue": [
        "src/*"
      ],
      "@common/*": [
        "src/_common/*"
      ],
      "@TdTypes/*": [
        "types/*"
      ],
      "@Button": [
        "src/button/index.ts"
      ],
      "@Select": [
        "src/select/index.ts"
      ],
      "@Pagination": [
        "src/pagination/index.ts"
      ],
      "@Input": [
        "src/input/index.ts"
      ],
      "@Radio": [
        "src/radio/index.ts"
      ],
      "@Checkbox": [
        "src/checkbox/index.ts"
      ],
      "@Table": [
        "src/table/index.ts"
      ],
      "@Popup": [
        "src/popup/index.ts"
      ],
      "@Tree": [
        "src/tree/index.ts"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "scripts/rollup.config.js"
  ],
  "exclude": [
    "node_modules",
    "src/_common",
    "dist",
    "lib",
    "esm",
    "es"
  ],
  "compileOnSave": false
}
